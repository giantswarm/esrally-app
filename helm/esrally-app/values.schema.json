                                "secretKey": {
                                    "type": "string"
                                },
                                "secretName": {
                                    "type": "string"
                                }
                            }
                        },
                        "username": {
                            "type": "object",
                            "properties": {
                                "secretKey": {
                                    "type": "string"
                                },
                                "secretName": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "securityContext": {
            "type": "object",
            "properties": {
                "groupID": {
                    "type": "integer"
                },
                "userID": {
