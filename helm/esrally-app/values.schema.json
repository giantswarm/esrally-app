{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "properties": {
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                }
            }
        },
        "job": {
            "type": "object",
            "properties": {
